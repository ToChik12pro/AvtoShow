<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_black_gradient"
    tools:context=".second">

    <!-- Заголовок приложения -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Модели автомобилей"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Изображение автомобилей эконом класса -->
    <ImageView
        android:id="@+id/economyImageView"
        android:layout_width="300dp"
    android:layout_height="150dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:contentDescription="Эконом класс"
    android:scaleType="centerCrop"
    android:src="@drawable/lada_png_transparent_picture"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/titleTextView" />

    <!-- Описание автомобилей эконом класса -->
    <TextView
        android:id="@+id/economyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Эконом класс: доступные автомобили для повседневных поездок."
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/economyImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <!-- Изображение автомобилей комфорт класса -->
    <ImageView
        android:id="@+id/comfortImageView"
        android:layout_width="353dp"
        android:layout_height="146dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Комфорт класс"
        android:scaleType="centerCrop"
        android:src="@drawable/kia_ceed_png_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/economyTextView" />

    <!-- Описание автомобилей комфорт класса -->
    <TextView
        android:id="@+id/comfortTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Комфорт класс: удобные автомобили с расширенным набором функций."
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/comfortImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <!-- Изображение автомобилей люкс класса -->

    <!-- Описание автомобилей люкс класса -->
    <ImageView
        android:id="@+id/luxuryImageView"
        android:layout_width="354dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Люкс класс"
        android:scaleType="centerCrop"
        android:src="@drawable/car_black_ferrari_side_view_png"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comfortTextView" />

    <TextView
        android:id="@+id/luxuryTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Люкс класс: премиум автомобили с высокой производительностью."
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/luxuryImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <!-- Кнопка 'Назад' -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:textColor="@android:color/white"
        android:backgroundTint="#8B0000"
        android:onClick="animateButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nextButton"
        app:layout_constraintWidth_percent="0.45"
        android:layout_margin="8dp" />

    <!-- Кнопка 'Следующие' -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Следующие"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF4500"
        android:onClick="animateButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45"
        android:layout_margin="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

